<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "de.hitec.oaidashboard.database.Repository" table = "REPOSITORY">
      
      <meta attribute = "class-description">
         This class contains the repository detail. 
      </meta>
      
      <id name = "id" type = "int" column = "repository_id">
         <generator class="native"/>
      </id>
      
      <property name = "name" type = "string" column = "name"/>
      <property name = "url" type = "string" column = "url"/>
      <property name = "betreiber" type = "string" column = "betreiber"/>
      
   </class>
</hibernate-mapping>